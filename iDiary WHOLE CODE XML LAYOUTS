sign_in.xml (sign in Layout)

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!-- FEATHER BACKGROUND -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="60dp"
        android:layout_height="64dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/featherlogo" />
    
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="149dp"
        android:layout_height="71dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/idiary" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/sign_in_label"
        android:textSize="24sp"
        android:fontFamily="@font/akatab_bold"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    
    <EditText
        android:id="@+id/editTextText"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:hint="@string/username_signin"
        android:inputType="text"
        android:textColorHint="#546E7A"
        android:autofillHints="Username"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--INSERT EMAIL -->
    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:hint="@string/email_signin"
        android:inputType="textEmailAddress"
        android:textColorHint="#546E7A"
        android:autofillHints="Email"
        app:layout_constraintTop_toBottomOf="@id/editTextText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--INSERT PASSWORD -->
    <EditText
        android:id="@+id/editTextText5"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:hint="@string/password_signin"
        android:inputType="textPassword"
        android:textColorHint="#546E7A"
        android:autofillHints="password"
        app:layout_constraintTop_toBottomOf="@id/editTextText2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <!--SIGN IN BUTTON -->
    <Button
        android:id="@+id/button3"
        android:layout_width="126dp"
        android:layout_height="52dp"
        android:layout_marginTop="144dp"
        android:backgroundTint="#C7ABAB"
        android:text="@string/signin_button"
        android:textColor="#37474F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextText5" />

    <!--BACK BUTTON -->
    <Button
        android:id="@+id/button2"
        android:layout_width="126dp"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#C7ABAB"
        android:text="@string/back_button"
        android:textColor="#37474F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button3" />

</androidx.constraintlayout.widget.ConstraintLayout>



login.xml (login Layout)

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- FEATHER LOGO -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="179dp"
        android:layout_height="212dp"
        android:layout_marginTop="92dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/featherlogo" />

    <!-- APP NAME LOGO -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="362dp"
        android:layout_height="84dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/idiary" />

    <!-- ENTER EMAIL -->
    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="249dp"
        android:layout_height="58dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_corner"
        android:hint="@string/input_email"
        android:inputType="textEmailAddress"
        android:padding="18dp"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    
    <!-- ENTER PASSWORD -->
    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="249dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_corner"
        android:hint="@string/input_password"
        android:inputType="textPassword"
        android:padding="18dp"
        app:layout_constraintTop_toBottomOf="@id/editTextText3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LOG IN BUTTON -->
    <Button
        android:id="@+id/button"
        android:layout_width="123dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#C7ABAB"
        android:text="@string/log_in_button"
        app:layout_constraintTop_toBottomOf="@id/editTextText4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- SIGN IN TEXT -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/textview_highlight"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:minHeight="48dp"
        android:padding="8dp"
        android:text="@string/label_signin"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>

writing_area.xml (writing area Layout)

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- BACK BUTTON -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="#C7ABAB"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- WRITING FIELD -->
    <EditText
        android:id="@+id/noteEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edittext_rounded"
        android:padding="16dp"
        android:gravity="top"
        android:hint="Write your note..."
        android:inputType="textMultiLine"
        android:textColor="#000000"
        android:textSize="16sp"
        android:minLines="8"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/saveButton"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"/>

    <!-- SAVE NOTE BUTTON -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save Note"
        android:backgroundTint="#C7ABAB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/changeColorButton"
        android:layout_marginBottom="12dp"/>

    <!-- Color BG CHANGE BUTTON -->
    <Button
        android:id="@+id/changeColorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color"
        android:backgroundTint="#C7ABAB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>



